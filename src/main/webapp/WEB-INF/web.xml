<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>CarritoControlador</servlet-name>
        <servlet-class>com.edu.pe.controlador.CarritoControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteControlador</servlet-name>
        <servlet-class>com.edu.pe.controlador.ClienteControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthControlador</servlet-name>
        <servlet-class>com.edu.pe.controlador.AuthControlador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarritoControlador</servlet-name>
        <url-pattern>/CarritoControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteControlador</servlet-name>
        <url-pattern>/ClienteControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthControlador</servlet-name>
        <url-pattern>/AuthControlador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
